<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:background="@drawable/gachon">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="회원정보"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#edecec"
                android:drawableStart="@drawable/baseline_person_black_18dp"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:hint="  이름"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/phoneNumberEditText"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#edecec"
                android:drawableStart="@drawable/baseline_call_black_18dp"
                android:drawableLeft="@drawable/baseline_call_black_18dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:ems="10"
                android:hint="  전화번호"
                android:inputType="phone" />

            <EditText
                android:id="@+id/studentNumberEditText"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#edecec"
                android:drawableStart="@drawable/baseline_recent_actors_black_18dp"
                android:drawableLeft="@drawable/baseline_recent_actors_black_18dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:ems="10"
                android:hint="  학번" />

            <EditText
                android:id="@+id/deptEditText"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#edecec"
                android:drawableStart="@drawable/baseline_school_black_18dp"
                android:drawableLeft="@drawable/baseline_school_black_18dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:ems="10"
                android:hint="  IT대학" />

            <Button
                android:id="@+id/checkButton"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#bebebe"
                android:text="확인"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="230dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:src="@drawable/gachon_logo" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>